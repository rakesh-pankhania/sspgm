<table cellspacing="0" cellpadding="9" height="100%" width="1000"><tr>

<td valign="top" width="70%" height="100%">
<table cellspacing="0" cellpadding="7" height="100%" width="100%">
<tr valign="top">
<td><font size="2" color=white>

<p align="right">
<% if user_signed_in? %>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
<% else %>
  <%= link_to('Login', new_user_session_path)  %>
<% end %>
</p>

<center><h1 class="page-header">SSPGM Directory</h1></center>

<div class="member-filters">
  <% if @filter_by -%>
    Filtering by "<%= @filter_by %>"<br />
    <%= link_to "<< Return to all results", members_url %>
    <br /><br />
  <% end -%>

  <table>
    <tr valign="top">
    <% @filter_categories.each_slice(5) do |categories| -%>
      <td width="200">
        <% categories.each do |category| %>
          <%= link_to category, members_url(country: category) %><br />
        <% end -%>
      </td>
    <% end -%>
    </tr>
  </table>
</div>

<br /><br />

<% @members.each do |member| %>
<font color="red"><b><%= member_name(member) %></b></font><br />
<% unless member.address.blank? %><%= member.address %><br /><% end %>
<%= "#{member.city}, #{member.state} #{member.zip} #{member.country}" %><br />
<% unless member.telephone.blank? %>Tel: <%= member.telephone %><br /><% end %>
<% unless member.email.blank? %>Email: <%= link_to member.email, "mailto:#{member.email}" %><br /><% end %>
<% unless member.spouse.blank? %>Spouse: <%= member.spouse %><br /><% end %>
<% unless member.children.blank? %>Children: <%= member.children %><br /><% end %>
<% unless member.education.blank? %>Education: <%= member.education %><br /><% end %>
<% unless member.profession.blank? %>Profession: <%= member.profession %><br /><% end %>

<br /><br />
<% end %>

</td>
</tr>
</table>

</td>
<td width="30%" height="100%" valign="top">

<table cellspacing="0" cellpadding="7" height="100%" width="100%" style="border-left: 2px solid #CC3333">
<tr valign="top">
<td align="center">
<%= render 'shared/right' %>
</td>
</tr>
</table>

</td>
</tr>
</table>
