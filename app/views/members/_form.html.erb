<%- professional_id = Professional.where(person: member.person).pluck(:id).first %>
<%- person_id = member.person_id %>

<div class="row mb-4">
  <div class="col-4">
    <h4><%= link_to "Basic Information", edit_person_path(person_id) %></h4>
  </div>
  <div class="col-4">
    <h4><a href="#"><font color="#33CCCC">Directory Listing</font></a></h4>
  </div>
  <div class="col-4">
    <% if professional_id -%>
      <h4><%= link_to "Professional Listing", edit_professional_path(professional_id) %></h4>
    <% end -%>
  </div>
</div>

<%= form_with(model: member, validate: true) do |form| %>
  <div class="row">
    <div class="form-group col-12">
      <%= form.label :address %><br />
      <%= form.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-3">
      <%= form.label :city %><br />
      <%= form.text_field :city, class: "form-control" %>
    </div>
    <div class="form-group col-3">
      <%= form.label :state %><br />
      <%= form.text_field :state, class: "form-control" %>
    </div>
    <div class="form-group col-3">
      <%= form.label :country %><br />
      <%= form.text_field :country, class: "form-control" %>
    </div>
    <div class="form-group col-3">
      <%= form.label :zip %><br />
      <%= form.text_field :zip, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-6">
      <%= form.label :telephone %>
      <%= form.text_field :telephone, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-6">
      <%= form.label :spouse %>
      <%= form.text_field :spouse, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-6">
      <%= form.label :children %>
      <%= form.text_field :children, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <%= form.label :education %>
      <%= form.text_field :education, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <%= form.label :profession %>
      <%= form.text_field :profession, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Cancel", members_url, class: "btn btn-secondary" %>
  </div>
<% end -%>
