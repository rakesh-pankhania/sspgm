<h1 class="page-header">SSPGM Professionals Page</h1>

<div class="member-filters">
  <% if @filter_by -%>
    Filtering by "<%= @filter_by %>"<br />
    <%= link_to "<< Return to all results", professionals_url %>
    <br /><br />
  <% end -%>

  <table>
    <tr valign="top">
    <% @filter_categories.each_slice(5) do |categories| -%>
      <td width="200">
        <% categories.each do |category| %>
          <%= link_to category, professionals_url(category: category) %><br />
        <% end -%>
      </td>
    <% end -%>
    </tr>
  </table>
</div>

<br /><br />

<% @professionals_by_category.each do |category, professionals| %>
  <font color="steelblue" size="3"><b><%= category %></b></font><br />
  <% professionals.each do |professional| %>
    <%= link_to professional.name, professional %><br />
  <% end -%>
  <br />
<% end %>
