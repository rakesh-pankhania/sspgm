<%- professional_id = person.professional&.id %>
<%- member_id = person.member&.id %>

<div class="row mb-4">
  <div class="col-4">
    <h4><a href="#"><font color="#33CCCC">Basic Information</font></a></h4>
  </div>
  <div class="col-4">
    <h4><%= link_to "Directory Listing", edit_member_path(member_id) %></h4>
  </div>
  <div class="col-4">
    <% if professional_id -%>
      <h4><%= link_to "Professional Listing", edit_professional_path(professional_id) %></h4>
    <% end -%>
  </div>
</div>

<%= form_with(model: person, validate: true) do |form| %>
  <div class="form-group col-md-4">
    <%= form.label :first_name %><br />
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :middle_name %><br />
    <%= form.text_field :middle_name, class: "form-control" %>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :last_name %><br />
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Cancel", members_url, class: "btn btn-secondary" %>
  </div>
<% end -%>
